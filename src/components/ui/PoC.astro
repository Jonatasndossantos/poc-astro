---
// PoC.astro — Proof of Concept section (pure static, no React needed)
import { getTranslations } from "../../i18n/index";
import { getLangFromUrl } from "../../i18n/utils";

// PoC strings live in src/content/poc/{locale}.json
// For now, falls back to hardcoded strings until poc/ namespace is created.
const lang = getLangFromUrl(Astro.url);

interface Props {
    locale?: string;
}
---

<section class="py-20 px-6 lg:px-20">
    <div
        class="flex flex-col items-center justify-center max-w-2xl mx-auto text-center gap-4"
    >
        <h2 class="text-2xl font-bold">
            Tradução automática por IA com intlayer
        </h2>
        <p class="text-base-content/70">
            Este texto é gerenciado pelo Intlayer. As traduções faltantes são
            preenchidas automaticamente com OpenAI via <code
                >npx intlayer fill</code
            >.
        </p>
    </div>
</section>
